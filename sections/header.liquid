<header class="site-header full-width">
  <div class="home__container header__inner">
    <div class="header__mobile-left">
      <button class="header__burger" aria-controls="mobile-menu" aria-expanded="false" aria-label="Open menu">
        <span></span>
        <span></span>
        <span></span>
      </button>

      <a href="{{ routes.search_url }}" class="header__icon header__icon--search-mobile" aria-label="Search">
        {{ 'header-icon-search.svg' | inline_asset_content }}
      </a>
    </div>

    <nav class="header__menu">
      {% for link in section.settings.menu.links %}
        <a href="{{ link.url }}" class="header__menu-link{% if link.active %} header__menu-link--active{% endif %}"{% if link.active %} aria-current="page"{% endif %}>
          {{ link.title }}
        </a>
      {% endfor %}
    </nav>

    <a href="{{ routes.root_url }}" class="header__logo" aria-label="{{ shop.name }}">
      <span class="header__logo-text">
        <span class="header__logo-text__primary">FOCUSED</span>
        <span class="header__logo-text__secondary" aria-hidden="true">FITS</span>
      </span>
    </a>

    <div class="header__icons">
      <a href="{{ routes.search_url }}" class="header__icon header__icon--search" aria-label="Search">
        {{ 'header-icon-search.svg' | inline_asset_content }}
      </a>

      {% if shop.customer_accounts_enabled %}
        <span class="header__icon header__icon--account">
          {{ 'header-icon-user.svg' | inline_asset_content | link_to: routes.account_url }}
        </span>
      {% endif %}

      <a href="{{ routes.cart_url }}" class="header__icon" aria-label="Cart">
        {% if cart.item_count > 0 %}
          <sup>{{ cart.item_count }}</sup>
        {% endif %}

        {{ 'header-icon-cart.svg' | inline_asset_content }}
      </a>
    </div>
  </div>

  <div id="mobile-menu" class="mobile-menu" aria-hidden="true">
    <div class="mobile-menu__overlay" data-mobile-menu-close></div>
    <div class="mobile-menu__panel" role="dialog" aria-modal="true">
      <div class="mobile-menu__header">
        <a href="{{ routes.root_url }}" class="mobile-menu__logo" aria-label="{{ shop.name }}">
          <span class="header__logo-text">
            <span class="header__logo-text__primary">FOCUSED</span>
            <span class="header__logo-text__secondary" aria-hidden="true">FITS</span>
          </span>
        </a>
        <button class="mobile-menu__close" aria-label="Close menu" data-mobile-menu-close>
          <span></span>
          <span></span>
        </button>
      </div>
      <nav class="mobile-menu__nav">
        {% for link in section.settings.menu.links %}
          <a href="{{ link.url }}" class="mobile-menu__link{% if link.active %} mobile-menu__link--active{% endif %}"{% if link.active %} aria-current="page"{% endif %} data-mobile-menu-close>
            {{ link.title }}
          </a>
        {% endfor %}
      </nav>

      <div class="mobile-menu__footer">
        <a href="{{ routes.cart_url }}" data-mobile-menu-close>View cart</a>
        <a href="{{ routes.search_url }}" data-mobile-menu-close>Search products</a>
        {% if shop.customer_accounts_enabled %}
          <a href="{{ routes.account_url }}" data-mobile-menu-close>My account</a>
        {% endif %}
      </div>
    </div>
  </div>
</header>

{% schema %}
{
  "name": "t:general.header",
  "class": "header",
  "settings": [
    {
      "type": "link_list",
      "id": "menu",
      "label": "t:labels.menu"
    }
  ],
  "presets": [
    {
      "name": "t:general.header"
    }
  ]
}
{% endschema %}