{% comment %}
  Search results section with enhanced layout styled to match the Focused Fits theme.
  Displays a hero search form, product cards aligned with collection styling, and
  supporting content cards for pages and articles.
{% endcomment %}

{% assign search_terms = search.terms | strip | escape %}

<div id="SearchSection-{{ section.id }}" class="search">
  <div class="search__hero">
    <div class="home__container search__hero-inner">
      <div class="search__hero-content">
        {% if section.settings.title != blank %}
          <h1 class="search__hero-eyebrow">{{ section.settings.title }}</h1>
        {% endif %}

        {% if section.settings.subtitle != blank %}
          <p class="search__hero-subtitle">{{ section.settings.subtitle }}</p>
        {% endif %}

        <form class="search__form" action="{{ routes.search_url }}" method="get" role="search" data-search-form>
          <label class="search__form-label" for="SearchInput-{{ section.id }}">
            {{- section.settings.title | default: 'Search' -}}
          </label>
          <div class="search__form-field">
            <input
              id="SearchInput-{{ section.id }}"
              class="search__form-input"
              type="search"
              name="q"
              value="{{ search_terms }}"
              placeholder="{{ section.settings.placeholder | default: 'Search for products, categories, or stories' }}"
              enterkeyhint="search"
              autocomplete="off"
              data-search-input
            >
            <button class="search__form-submit" type="submit" data-search-submit>
              <span class="search__form-submit-label">
                {{ 'search.submit' | t | default: 'Search' }}
              </span>
              <span class="search__form-submit-loader" aria-hidden="true">
                <span class="search__form-submit-dot"></span>
                <span class="search__form-submit-dot"></span>
                <span class="search__form-submit-dot"></span>
              </span>
            </button>
          </div>
        </form>

        {% if section.settings.quick_links != blank and section.settings.quick_links.links.size > 0 %}
          <div class="search__suggestions">
            {% if section.settings.quick_links_heading != blank %}
              <span class="search__suggestions-label">{{ section.settings.quick_links_heading }}</span>
            {% endif %}
            <div class="search__suggestions-list">
              {% for link in section.settings.quick_links.links %}
                <a class="search__suggestion" href="{{ link.url }}">{{ link.title | escape }}</a>
              {% endfor %}
            </div>
          </div>
        {% endif %}
      </div>
    </div>
  </div>

  <div class="search__content">
    <div class="home__container search__content-inner">
      {% if search.performed %}
        <div class="search__summary">
          <p class="search__summary-text">
            {% if search.results_count > 0 %}
              Showing {{ search.results_count }}
              {{ search.results_count | pluralize: 'result', 'results' }} for “{{ search_terms }}”
            {% else %}
              No results for “{{ search_terms }}”
            {% endif %}
          </p>
          <a class="search__summary-reset" href="{{ routes.search_url }}">Clear search</a>
        </div>

        {% if search.results_count > 0 %}
          {% paginate search.results by 12 %}
            {% assign product_results_count = 0 %}
            {% assign content_results_count = 0 %}

            {% capture product_results_markup %}
              {% for result in search.results %}
                {% if result.object_type == 'product' %}
                  {% assign product = result %}
                  {% assign is_available = product.available %}
                  {% assign is_sold_out = false %}
                  {% unless product.available %}
                    {% assign is_sold_out = true %}
                  {% endunless %}
                  {% assign has_discount = false %}
                  {% if product.compare_at_price and product.price and product.compare_at_price > product.price %}
                    {% assign has_discount = true %}
                  {% endif %}

                  {% assign product_results_count = product_results_count | plus: 1 %}

                  <article class="collection__product search__product-card{% if is_sold_out %} collection__product--sold-out{% endif %}">
                    <div class="collection__product-media-wrapper">
                      <a
                        class="collection__product-media{% if is_sold_out %} collection__product-media--disabled{% endif %}"
                        {% if is_sold_out %}
                          aria-disabled="true"
                          tabindex="-1"
                        {% else %}
                          href="{{ product.url }}"
                          aria-label="{{ product.title | escape }}"
                        {% endif %}
                      >
                        {% if product.featured_image %}
                          {{
                            product.featured_image
                            | image_url: width: 600
                            | image_tag: loading: 'lazy', alt: product.featured_image.alt | default: product.title, class: 'collection__product-image'
                          }}
                        {% else %}
                          <div class="collection__product-image collection__product-image--placeholder">
                            {{ 'product-1' | placeholder_svg_tag: 'placeholder-svg' }}
                          </div>
                        {% endif %}

                        <div class="collection__product-badges">
                          <div class="collection__product-badges-left">
                            {% if is_sold_out %}
                              <span class="collection__product-badge collection__product-badge--sold-out">Sold out</span>
                            {% endif %}
                          </div>
                          <div class="collection__product-badges-right">
                            {% if has_discount and is_available %}
                              {% assign discount = product.compare_at_price
                                | minus: product.price
                                | times: 100.0
                                | divided_by: product.compare_at_price
                                | round
                              %}
                              <span class="collection__product-badge collection__product-badge--sale">{{ discount }}% Off</span>
                            {% endif %}
                          </div>
                        </div>
                      </a>
                    </div>

                    <div class="collection__product-content search__product-content">
                      <div class="collection__product-content-inner">
                        <h3 class="collection__product-title">
                          <a href="{{ product.url }}">{{ product.title | escape }}</a>
                        </h3>
                        <div class="collection__product-price-wrapper">
                          <div class="collection__product-price">
                            {% if has_discount %}
                              <span class="collection__product-price--sale">{{ product.price | money }}</span>
                              <span class="collection__product-price--compare">{{ product.compare_at_price | money }}</span>
                            {% else %}
                              {{ product.price | money }}
                            {% endif %}
                          </div>
                        </div>
                      </div>

                      <a class="search__product-link" href="{{ product.url }}">View product</a>
                    </div>
                  </article>
                {% endif %}
              {% endfor %}
            {% endcapture %}

            {% capture content_results_markup %}
              {% for result in search.results %}
                {% unless result.object_type == 'product' %}
                  {% assign content_results_count = content_results_count | plus: 1 %}
                  <article class="search__resource-card">
                    {% assign resource_image = result.featured_image | default: result.image %}
                    {% if resource_image %}
                      <a class="search__resource-media" href="{{ result.url }}" aria-label="{{ result.title | escape }}">
                        {{
                          resource_image
                          | image_url: width: 460
                          | image_tag: loading: 'lazy', alt: resource_image.alt | default: result.title
                        }}
                      </a>
                    {% endif %}

                    <div class="search__resource-body">
                      <span class="search__resource-type">
                        {% case result.object_type %}
                          {% when 'article' %}
                            Editorial
                          {% when 'page' %}
                            Page
                          {% else %}
                            Resource
                        {% endcase %}
                      </span>
                      <h3 class="search__resource-title">
                        <a href="{{ result.url }}">{{ result.title | escape }}</a>
                      </h3>
                      {% if result.content %}
                        <p class="search__resource-excerpt">
                          {{ result.content | strip_html | truncate: 140 }}
                        </p>
                      {% elsif result.description %}
                        <p class="search__resource-excerpt">
                          {{ result.description | strip_html | truncate: 140 }}
                        </p>
                      {% endif %}
                      <a class="search__resource-link" href="{{ result.url }}">Open</a>
                    </div>
                  </article>
                {% endunless %}
              {% endfor %}
            {% endcapture %}

            {% if product_results_count > 0 %}
              <div class="search__section">
                <div class="search__section-header">
                  <h2 class="search__section-title">Products</h2>
                  <span class="search__section-count">
                    {{ product_results_count }}
                    {{ product_results_count | pluralize: 'item', 'items' }}
                  </span>
                </div>
                <div class="collection__grid collection__grid--cols-4 collection__grid--cols-m-2 search__products-grid">
                  {{ product_results_markup }}
                </div>
              </div>
            {% endif %}

            {% if content_results_count > 0 %}
              <div class="search__section">
                <div class="search__section-header">
                  <h2 class="search__section-title">Guides &amp; pages</h2>
                  <span class="search__section-count">
                    {{ content_results_count }}
                    {{ content_results_count | pluralize: 'result', 'results' }}
                  </span>
                </div>
                <div class="search__resources-grid">
                  {{ content_results_markup }}
                </div>
              </div>
            {% endif %}

            {% if paginate.pages > 1 %}
              <div class="search__pagination">
                {{ paginate | default_pagination }}
              </div>
            {% endif %}
          {% endpaginate %}
        {% else %}
          <div class="search__empty">
            <h2 class="search__empty-title">We couldn't find any matches</h2>
            <p class="search__empty-text">
              Double-check your spelling or try using a different keyword. You can also explore our collections below.
            </p>
            <div class="search__empty-actions">
              <a class="search__empty-button" href="{{ routes.collections_url }}">Browse collections</a>
              <a class="search__empty-link" href="{{ routes.root_url }}">Go back home</a>
            </div>
          </div>
        {% endif %}
      {% else %}
        <div class="search__placeholder">
          <h2 class="search__placeholder-title">Start typing to discover new pieces</h2>
          <p class="search__placeholder-text">
            Use product names, categories, fabrics, or vibes (like “athleisure” or “crew neck”) and we'll surface the
            best matches.
          </p>
        </div>
      {% endif %}
    </div>
  </div>
</div>

<script>
  (() => {
    const SECTION_ID = 'SearchSection-{{ section.id }}';
    const INITIAL_TERMS = {{ search.terms | strip | json }};
    const SEARCH_PERFORMED = {{ search.performed | json }};

    const initSearchEnhancements = (root) => {
      if (!root || root.dataset.searchEnhanced === 'true') return;
      const form = root.querySelector('[data-search-form]');
      const input = root.querySelector('[data-search-input]');
      const submitButton = root.querySelector('[data-search-submit]');
      if (!form || !input || !submitButton) return;

      root.dataset.searchEnhanced = 'true';

      let debounceTimer = null;
      let lastSubmittedTerm = input.value.trim();

      const setLoading = (state) => {
        submitButton.classList.toggle('search__form-submit--loading', state);
        submitButton.disabled = state;
      };

      setLoading(false);

      const submitSearch = () => {
        const term = input.value.trim();
        if (!term || term === lastSubmittedTerm) return;
        lastSubmittedTerm = term;
        setLoading(true);
        form.submit();
      };

      input.addEventListener('input', () => {
        const term = input.value.trim();
        if (!term) {
          clearTimeout(debounceTimer);
          if (lastSubmittedTerm !== '') {
            lastSubmittedTerm = '';
            setLoading(true);
            window.location.href = form.action;
          }
          return;
        }

        clearTimeout(debounceTimer);
        debounceTimer = setTimeout(submitSearch, 450);
      });

      form.addEventListener('submit', () => {
        lastSubmittedTerm = input.value.trim();
        setLoading(true);
      });

      if (SEARCH_PERFORMED && INITIAL_TERMS) {
        requestAnimationFrame(() => {
          input.focus({ preventScroll: true });
          const len = input.value.length;
          input.setSelectionRange(len, len);
        });
      }
    };

    const handleSectionLoad = (event) => {
      const root =
        event?.target?.querySelector(`#${SECTION_ID}`) ||
        document.getElementById(SECTION_ID);
      initSearchEnhancements(root);
    };

    window.addEventListener('pageshow', () => {
      const root = document.getElementById(SECTION_ID);
      const submitButton = root?.querySelector('[data-search-submit]');
      if (submitButton) {
        submitButton.classList.remove('search__form-submit--loading');
        submitButton.disabled = false;
      }
    });

    document.addEventListener('DOMContentLoaded', () => {
      handleSectionLoad();
    });

    document.addEventListener('shopify:section:load', handleSectionLoad);
    document.addEventListener('shopify:section:select', handleSectionLoad);
  })();
</script>

{% schema %}
{
  "name": "Search",
  "settings": [
    { "type": "text", "id": "title", "label": "Eyebrow title", "default": "Search Focused Fits" },
    {
      "type": "textarea",
      "id": "subtitle",
      "label": "Subtitle",
      "default": "Discover your next outfit by searching for products, categories, or even a mood."
    },
    {
      "type": "text",
      "id": "placeholder",
      "label": "Search input placeholder",
      "default": "Search for products, categories, or stories"
    },
    { "type": "text", "id": "quick_links_heading", "label": "Quick links heading", "default": "Popular searches" },
    { "type": "link_list", "id": "quick_links", "label": "Quick links menu" }
  ]
}
{% endschema %}
