{% comment %}
  Announcement Bar Section

  Independent section for displaying announcement messages.
{% endcomment %}

{% if section.blocks.size > 0 %}
  <div
    class="announcement-bar full-width"
    style="background-color: {{ section.settings.background }}; color: {{ section.settings.text_color }}; text-align: center;"
  >
    {% for block in section.blocks %}
      {% if block.settings.link != blank %}
        <a href="{{ block.settings.link }}" class="announcement-bar__item" {{ block.shopify_attributes }}>
          {{ block.settings.text | escape }}
        </a>
      {% else %}
        <span class="announcement-bar__item" {{ block.shopify_attributes }}>
          {{ block.settings.text | escape }}
        </span>
      {% endif %}

      {% unless forloop.last %}
        <span class="announcement-bar__sep" aria-hidden="true"> Â· </span>
      {% endunless %}
    {% endfor %}
  </div>
{% endif %}

{% stylesheet %}
  .announcement-bar {
    display: block;
    text-align: center;
    font-weight: 400;
    font-size: 12px;
    line-height: 167%;
    text-transform: uppercase;
    padding: 6px 0;
  }
{% endstylesheet %}

{% schema %}
{
  "name": "Announcement bar",
  "settings": [
    {
      "type": "color",
      "id": "background",
      "label": "Background color",
      "default": "#212322"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text color",
      "default": "#ffffff"
    }
  ],
  "max_blocks": 10,
  "blocks": [
    {
      "type": "announcement",
      "name": "Announcement",
      "settings": [
        {
          "type": "text",
          "id": "text",
          "label": "Text",
          "default": "FREE UNITED KINGDOM SHIPPING $200+"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Link (optional)"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Announcement bar",
      "blocks": [
        {
          "type": "announcement",
          "settings": {
            "text": "FREE UNITED KINGDOM SHIPPING $200+"
          }
        }
      ]
    }
  ]
}
{% endschema %}
